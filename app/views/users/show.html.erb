  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade in active" id="tab01">
      <p><%= @nickname %>さんの投稿一覧 </p> 
      <% @tweets.each do |tweet| %>
      <%= render partial: "tweets/tweet", locals: { tweet: tweet } %>
      <% end %>
    </div>

    <div class="tab-pane fade in" id="tab02">
      <div class="contents row">
        <p><%= @nickname %>さんがコメントした投稿一覧</p>
        <% @tweets_comments.each do |tweet| %>
        <%= render partial: "tweets/tweet", locals: { tweet: tweet } %>
        <% end %>
      </div>
    </div>


    <div class="tab-pane fade in" id="tab03">    
      <div class="contents row">
        <p><%= @nickname %>さんがいいねした投稿一覧</p>
        <% @tweets_likes.each do |tweet| %>
        <%= render partial: "tweets/tweet", locals: { tweet: tweet } %>
        <% end %>
      </div>
    </div>

  </div>

</div>

